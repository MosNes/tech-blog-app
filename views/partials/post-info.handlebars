<article class="card column is-centered is-12 m-4">
    <div class="card-header">
        <h3 class="card-header-title">{{title}}</h3>
    </div>
    <div class="card-content">
        <div class="content">
            {{contents}}
        </div>
    </div>
    <div class="card-footer">
        <p>Created by <strong>{{user.username}}</strong> on {{created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment {{comments.length}}</a></p>
    </div>
</article>